@model MoseKeyboard.Models.Models.Product

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        display: flex;
        flex-direction: column;
        background: rgb(22,22,22);
        background: linear-gradient(177deg, rgba(22,22,22,1) 0%, rgba(7,7,7,1) 100%);
        justify-content: center;
    }

    .create {
        width: 40%;
        margin-top: 3.5vw;
        margin-left: 30vw;
        background-color: rgba(0, 0, 0, 0.4);
        height: 40vw;
        min-height: 200px;
        display: flex;
        flex-direction: column;
        padding: 2vw;
        border-radius: 10px;
    }

    .create h1, hr {
        align-self: center;
        color: darkgray;
        font-family: PT SERIF;
    }

    .control-label {
        color: darkgray;
        font-family: PT SERIF;
        font-size: 1vw;
        margin-bottom: 1vw;
    }

    .form-control {
        background-color: rgb(25,25,25);
        border: solid 1px rgb(25,25,25);
        color: darkgray;
        font-family: PT SERIF;
        width: 36vw;
    }

    .btn-class {
        background-color: rgb(25,25,25);
        border: solid 0px;
        color: darkgray;
        font-family: PT SERIF;
    }
</style>

<body>
    <div class="create">
        <h1>Create</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />    
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" type="file" name="files" id="uploadBox" multiple class="form-control, inputs" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                    <div class="form-group" style="margin-top: 1vw;">
                        <input type="submit" value="Create" class="btn btn-primary, btn-class" />
                        <a asp-action="Index" class="btn btn-primary, btn-class">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

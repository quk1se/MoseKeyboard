@model IEnumerable<MoseKeyboard.Models.Models.Product>
@* @using MoseKeyboard.Models.ViewModel *@
@{
    ViewData["Title"] = "Index";
    // Pager pager = new Pager();
    // int pageNo = 0;
    // if (ViewBag.Pager != null)
    // {
    //     pager = ViewBag.Pager;
    //     pageNo = pager.CurrentPage;
    // }
}

<style>
    body {
        display: flex;
        flex-direction: column;
        background: rgb(22,22,22);
        background: linear-gradient(177deg, rgba(22,22,22,1) 0%, rgba(7,7,7,1) 100%);
        justify-content: center;
    }

        body h1, tr, th {
            color: gray;
            font-family: PT SERIF;
        }

    .product-table {
        width: 80%;
        margin-top: 3.5vw;
        margin-left: 10vw;
        background-color: rgba(0, 0, 0, 0.4);
        height: 40vw;
        min-height: 200px;
        display: flex;
        flex-direction: column;
        padding: 2vw;
        border-radius: 10px;
    }

    .table {
        background-color: rgb(13,13,13);
        border: solid 1px rgb(13,13,13);
        border-radius: 10px;
    }

    .btn-class {
        background-color: rgb(35,35,35);
        border: solid 0px;
        color: darkgray;
        font-family: PT SERIF;
    }
</style>
<body>
    <div class="product-table">
        <h1>Products list</h1>

        <p>
            <a asp-action="Create" class="btn btn-primary, btn-class">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Image)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Description)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary, btn-class">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary, btn-class">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary, btn-class">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @* <partial name="_PagerProduct" model="@pager" /> *@
    </div>
</body>

